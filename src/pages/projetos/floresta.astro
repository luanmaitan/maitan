---
import Layout from "../../layouts/Layout.astro";

const currentPath = Astro.url.pathname;
---

<Layout title="Maitan Hub | Floresta">
  <div slot="sidebar" class="w-full flex flex-col gap-8 md:flex-row md:items-center md:gap-6 lg:flex-col lg:items-start lg:gap-8">
    <nav class="flex flex-col gap-2 md:flex-row md:gap-6 lg:flex-col lg:gap-2 w-full md:w-auto">
        <a href="/" class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase mb-4 md:mb-0">
            ← voltar
        </a>
      
      {[
        { name: 'hedra', href: '/projetos/hedra' },
        { name: 'vigília', href: '/projetos/vigilia' },
        { name: 'labirinto', href: '/projetos/labirinto' },
        { name: 'floresta', href: '/projetos/floresta' },
      ].map((item) => {
        const isActive = currentPath === item.href;
        return (
        <a
            href={item.href}
            class="group flex flex-col md:flex-row md:items-center md:gap-1 lg:flex-col lg:items-start lg:gap-0"
        >
            <div class="flex flex-col justify-center relative shrink-0">
                <span class:list={[
                    "text-[15px] font-medium lowercase leading-[1.2] tracking-[-0.3px]",
                    isActive ? "text-black dark:text-white" : "text-neutral-500 dark:text-neutral-400 hover:text-black dark:hover:text-white"
                ]}>{item.name}</span>
            </div>
        </a>
      )})}
    </nav>
  </div>

  <section class="space-y-12">
    <header class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
        <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white lowercase">
            floresta
        </h1>
        <div class="space-y-4 text-[15px] leading-[1.5] text-neutral-600 dark:text-neutral-400">
            <p>
                Projeto ecológico e ambiental focado na observação e preservação da biodiversidade.
            </p>
            <p>
                Um diário de campo digital e físico sobre as plantas e formas de vida que me cercam.
            </p>
        </div>
    </header>

    <div class="w-full aspect-video bg-neutral-100 dark:bg-neutral-800 rounded-lg overflow-hidden relative border border-neutral-200 dark:border-neutral-800">
        <img src="/projects/floresta.png" alt="Floresta" class="w-full h-full object-cover" />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
            <h3 class="text-lg font-medium text-black dark:text-white lowercase mb-2">role</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">Observador / Jardineiro</p>
        </div>
        <div>
            <h3 class="text-lg font-medium text-black dark:text-white lowercase mb-2">status</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">Contínuo</p>
        </div>
        <div>
            <h3 class="text-lg font-medium text-black dark:text-white lowercase mb-2">local</h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">São Paulo, SP</p>
        </div>
    </div>
  </section>
</Layout>
