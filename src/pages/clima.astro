---
import Layout from '../layouts/Layout.astro';
import WeatherDetail from '../components/WeatherDetail.svelte';
---

<Layout title="Maitan Hub | Clima">
  <div slot="sidebar" class="flex flex-col gap-8">
    <nav class="flex flex-col gap-2">
      <a href="/" class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase mb-4">
        ← voltar ao início
      </a>
    </nav>
  </div>

  <section class="space-y-16">
    <header class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
      <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white lowercase">
        clima
      </h1>
      <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed max-w-2xl">
        Condições meteorológicas atuais em São Paulo, sem anúncios ou rastreadores.
      </p>
    </header>

    <WeatherDetail client:load />
  </section>
</Layout>

