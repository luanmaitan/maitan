---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allNotes = await getCollection("notas");
const tags = [...new Set(allNotes.map((note) => note.data.tags).flat())].sort();
---

<Layout title="Luan Maitan | Tags">
    <section class="space-y-12">
        <header class="space-y-4">
            <h1
                class="text-3xl font-serif font-medium text-neutral-900 dark:text-neutral-100"
            >
                Tags
            </h1>
            <p
                class="text-neutral-600 dark:text-neutral-400 font-serif max-w-xl leading-relaxed"
            >
                Índice de tópicos explorados nas notas.
            </p>
        </header>

        <div class="flex flex-wrap gap-4">
            {
                tags.map((tag) => (
                    <a
                        href={`/tags/${tag}`}
                        class="text-sm font-mono text-neutral-600 dark:text-neutral-400 bg-neutral-100 dark:bg-neutral-800 px-3 py-2 rounded-md hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors"
                    >
                        #{tag}
                    </a>
                ))
            }
        </div>
    </section>
</Layout>
