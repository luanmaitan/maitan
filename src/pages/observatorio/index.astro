---
import Layout from "../../layouts/Layout.astro";

const sections = [
    {
        title: "filmes",
        description:
            "Registro dos filmes assistidos, avaliações e estatísticas.",
        href: "/observatorio/filmes",
        icon: "film",
    },
    {
        title: "livros",
        description: "Biblioteca digital com leituras, progresso e resenhas.",
        href: "/observatorio/livros",
        icon: "book",
    },
    {
        title: "links",
        description:
            "Curadoria de links, artigos e recursos interessantes da web.",
        href: "/observatorio/links",
        icon: "link",
    },
    {
        title: "citações",
        description: "Coleção de trechos memoráveis e pensamentos.",
        href: "/observatorio/citacoes",
        icon: "quote",
    },
];

const currentPath = Astro.url.pathname;
---

<Layout title="Maitan Hub | Observatório">
    <div
        slot="sidebar"
        class="w-full flex flex-col gap-8 md:flex-row md:items-center md:gap-6 lg:flex-col lg:items-start lg:gap-8"
    >
        <nav
            class="flex flex-col gap-2 md:flex-row md:gap-6 lg:flex-col lg:gap-2 w-full md:w-auto"
        >
            <a
                href="/"
                class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase mb-4 md:mb-0"
            >
                ← voltar
            </a>

            {
                [
                    {
                        name: "livros",
                        href: "/observatorio/livros",
                        count: "—",
                    },
                    {
                        name: "filmes",
                        href: "/observatorio/filmes",
                        count: "—",
                    },
                    {
                        name: "citações",
                        href: "/observatorio/citacoes",
                        count: "—",
                    },
                    { name: "links", href: "/observatorio/links", count: "—" },
                ].map((item) => {
                    const isActive = currentPath === item.href;
                    return (
                        <a
                            href={item.href}
                            class="group flex flex-col md:flex-row md:items-center md:gap-1 lg:flex-col lg:items-start lg:gap-0"
                        >
                            <div class="flex flex-col justify-center relative shrink-0">
                                <span
                                    class:list={[
                                        "text-[15px] font-bold lowercase leading-[1.2] tracking-tight",
                                        isActive
                                            ? "text-black dark:text-white"
                                            : "text-neutral-500 dark:text-neutral-400 hover:text-black dark:hover:text-white",
                                    ]}
                                >
                                    {item.name}
                                </span>
                            </div>
                            <div class="flex flex-col justify-center relative shrink-0 mt-0.5 md:mt-0 lg:mt-0.5">
                                <span class="text-[#575757] dark:text-neutral-500 text-[10px] tracking-[-0.2px] leading-[1.2] whitespace-pre -mt-0.5 md:-mt-3 lg:-mt-0.5 ml-0.5 md:ml-0.5 lg:ml-0">
                                    {String(item.count).padStart(2, "0")}
                                </span>
                            </div>
                        </a>
                    );
                })
            }
        </nav>
    </div>

    <section class="space-y-12">
        <header>
            <h1
                class="text-[60px] leading-[0.95] tracking-tighter font-black text-black dark:text-white mb-4 lowercase"
            >
                observatório
            </h1>
            <p
                class="text-neutral-600 dark:text-neutral-400 leading-relaxed max-w-2xl"
            >
                Um espaço dedicado ao registro e curadoria do que consumo e
                encontro. Aqui mantenho meus logs de filmes, livros, links e
                citações.
            </p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {
                sections.map((section) => (
                    <a
                        href={section.href}
                        class="group block p-6 rounded-none border border-neutral-200 dark:border-neutral-800 hover:border-neutral-400 dark:hover:border-neutral-600 transition-all hover:shadow-sm bg-white dark:bg-neutral-900/50"
                    >
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-xl font-bold group-hover:text-neutral-900 dark:group-hover:text-white transition-colors lowercase tracking-tight">
                                {section.title}
                            </h2>
                            <span class="text-neutral-400 group-hover:text-neutral-600 dark:group-hover:text-neutral-300 transition-colors">
                                →
                            </span>
                        </div>
                        <p class="text-sm text-neutral-500 dark:text-neutral-400 leading-relaxed">
                            {section.description}
                        </p>
                    </a>
                ))
            }
        </div>
    </section>
</Layout>
