---
import Layout from "../../layouts/Layout.astro";
import { getRaindrops } from "../../lib/raindrop";

let links = [];
let allTags: Record<string, number> = {};

try {
  links = await getRaindrops(0); // 0 = All items
  
  // Extract tags
  links.forEach((link: any) => {
    if (link.tags) {
      link.tags.forEach((tag: string) => {
        allTags[tag] = (allTags[tag] || 0) + 1;
      });
    }
  });
} catch (error) {
  console.error("Error fetching links:", error);
}

const tags = Object.entries(allTags).sort((a, b) => b[1] - a[1]);
const currentPath = Astro.url.pathname;
---

<Layout title="Maitan Hub | Links">
  <div slot="sidebar" class="flex flex-col gap-8">
    <header>
      <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white mb-4 lowercase">
        links
      </h1>
      <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
        Curadoria de links, artigos e recursos interessantes da web. Sincronizado com <a href="https://raindrop.io/" target="_blank" class="underline decoration-neutral-300 dark:decoration-neutral-700 underline-offset-2 hover:text-black dark:hover:text-white transition-colors">Raindrop.io</a>.
      </p>
    </header>

    <div class="flex flex-col gap-8">
        <!-- Back Link -->
        <a href="/observatorio" class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase">
            ← observatório
        </a>

        <!-- Filters (Tags) -->
        {tags.length > 0 && (
            <div class="flex flex-col gap-2">
                <span class="text-[10px] font-medium uppercase tracking-wider text-neutral-400 dark:text-neutral-500">
                    Filtros
                </span>
                <div class="flex flex-wrap gap-2">
                    <a href="#" data-tag="all" class="filter-tag text-[13px] text-black dark:text-white font-medium transition-colors lowercase">
                        todos
                    </a>
                    {tags.map(([tag, count]) => (
                        <a href={`#${tag}`} data-tag={tag} class="filter-tag text-[13px] text-neutral-500 hover:text-black dark:text-neutral-400 dark:hover:text-white transition-colors lowercase">
                            #{tag} <span class="text-neutral-300 dark:text-neutral-600">({count})</span>
                        </a>
                    ))}
                </div>
            </div>
        )}
    </div>
  </div>

  <section class="space-y-12">
    {links.length === 0 ? (
        <div class="py-12 text-center border-y border-neutral-100 dark:border-neutral-800">
            <p class="text-neutral-400 dark:text-neutral-500 font-serif italic">
            Nenhum link encontrado.
            </p>
        </div>
    ) : (
        <div class="grid grid-cols-1 gap-8">
            {links.map((link: any) => (
                <article 
                    class="link-item group relative flex flex-col gap-2 transition-all duration-300"
                    data-tags={link.tags ? link.tags.join(',') : ''}
                    data-cover={link.cover}
                >
                    <div class="flex items-baseline justify-between gap-4">
                        <a href={link.link} target="_blank" class="link-title text-lg font-medium text-neutral-900 dark:text-white hover:text-redo-orange dark:hover:text-redo-orange transition-colors lowercase leading-tight decoration-1 hover:underline underline-offset-4">
                            {link.title}
                        </a>
                        <span class="text-xs font-mono text-neutral-400 dark:text-neutral-600 shrink-0">
                            {new Date(link.created).toLocaleDateString('pt-BR', { year: '2-digit', month: 'short', day: '2-digit' })}
                        </span>
                    </div>
                    
                    {link.excerpt && (
                        <p class="text-sm text-neutral-600 dark:text-neutral-400 leading-relaxed line-clamp-2 font-serif">
                            {link.excerpt}
                        </p>
                    )}
                    
                    <div class="flex gap-2 items-center">
                        <span class="text-[10px] uppercase tracking-wider text-neutral-400 dark:text-neutral-600 bg-neutral-100 dark:bg-neutral-800 px-1.5 py-0.5 rounded-sm">
                            {link.domain}
                        </span>
                        {link.tags && link.tags.map((tag: string) => (
                            <span class="text-[10px] text-neutral-400 dark:text-neutral-600 lowercase">#{tag}</span>
                        ))}
                    </div>
                </article>
            ))}
        </div>
    )}

    <!-- Floating Image Container -->
    <img id="link-cover" src="" alt="" class="fixed pointer-events-none opacity-0 w-64 rounded-md shadow-2xl z-50 transition-opacity duration-200 object-cover aspect-video hidden border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900" style="left: 0; top: 0;" />
  </section>
</Layout>

<script>
  // Filter Logic
  const filterTags = document.querySelectorAll('.filter-tag');
  const linkItems = document.querySelectorAll('.link-item');

  function filterLinks(selectedTag) {
    linkItems.forEach(item => {
      const itemTags = (item as HTMLElement).dataset.tags?.split(',') || [];
      if (selectedTag === 'all' || itemTags.includes(selectedTag)) {
        (item as HTMLElement).style.display = 'flex';
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });

    // Update active state
    filterTags.forEach(tag => {
      const tagValue = (tag as HTMLElement).dataset.tag;
      if (tagValue === selectedTag) {
        tag.classList.remove('text-neutral-500', 'dark:text-neutral-400');
        tag.classList.add('text-black', 'dark:text-white', 'font-medium');
      } else {
        tag.classList.add('text-neutral-500', 'dark:text-neutral-400');
        tag.classList.remove('text-black', 'dark:text-white', 'font-medium');
      }
    });
  }

  filterTags.forEach(tag => {
    tag.addEventListener('click', (e) => {
      e.preventDefault();
      const selectedTag = (e.currentTarget as HTMLElement).dataset.tag;
      if (selectedTag) {
        filterLinks(selectedTag);
        // Update URL hash without scrolling
        history.replaceState(null, '', selectedTag === 'all' ? ' ' : `#${selectedTag}`);
      }
    });
  });

  // Check initial hash
  const initialHash = window.location.hash.slice(1);
  if (initialHash) {
    filterLinks(decodeURIComponent(initialHash));
  }

  // Hover Image Logic
  const linkTitles = document.querySelectorAll('.link-title');
  const cover = document.getElementById('link-cover') as HTMLImageElement;
  let hideTimeout: any;

  linkItems.forEach(item => {
    const titleLink = item.querySelector('.link-title');
    if (!titleLink) return;

    titleLink.addEventListener('mouseenter', (e) => {
      const imgUrl = (item as HTMLElement).dataset.cover;
      if (imgUrl && cover) {
        if (hideTimeout) {
          clearTimeout(hideTimeout);
          hideTimeout = null;
        }

        cover.src = imgUrl;
        cover.classList.remove('hidden');
        requestAnimationFrame(() => {
            cover.classList.remove('opacity-0');
        });
      }
    });

    titleLink.addEventListener('mouseleave', () => {
      if (cover) {
        cover.classList.add('opacity-0');
        hideTimeout = setTimeout(() => {
            cover.classList.add('hidden');
        }, 200);
      }
    });

    titleLink.addEventListener('mousemove', (e) => {
      if (cover) {
        const x = (e as MouseEvent).clientX;
        const y = (e as MouseEvent).clientY;
        const offsetX = 20;
        const offsetY = 20;
        cover.style.transform = `translate(${x + offsetX}px, ${y + offsetY}px)`;
      }
    });
  });
</script>
