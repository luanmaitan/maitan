---
import Layout from "../../layouts/Layout.astro";
import { getQuotes } from "../../lib/citacoes";

let quotes = [];
let allTags: Record<string, number> = {};

try {
    quotes = getQuotes();
    
    // Extract tags
    quotes.forEach((quote: any) => {
        if (quote.tags) {
            quote.tags.forEach((tag: string) => {
                allTags[tag] = (allTags[tag] || 0) + 1;
            });
        }
    });
} catch (e) {
    console.error("Failed to load quotes:", e);
}

const tags = Object.entries(allTags).sort((a, b) => b[1] - a[1]);
const currentPath = Astro.url.pathname;
---

<Layout title="Maitan Hub | Citações">
  <div slot="sidebar" class="flex flex-col gap-8">
    <header>
      <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white mb-4 lowercase">
        citações
      </h1>
      <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
        Coleção de trechos memoráveis e pensamentos.
      </p>
    </header>

    <div class="flex flex-col gap-8">
        <!-- Back Link -->
        <a href="/observatorio" class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase">
            ← observatório
        </a>

        <!-- Filters (Tags) -->
        {tags.length > 0 && (
            <div class="flex flex-col gap-2">
                <span class="text-[10px] font-medium uppercase tracking-wider text-neutral-400 dark:text-neutral-500">
                    Filtros
                </span>
                <div class="flex flex-wrap gap-2">
                    {tags.map(([tag, count]) => (
                        <a href={`#${tag}`} class="text-[13px] text-neutral-500 hover:text-black dark:text-neutral-400 dark:hover:text-white transition-colors lowercase">
                            #{tag} <span class="text-neutral-300 dark:text-neutral-600">({count})</span>
                        </a>
                    ))}
                </div>
            </div>
        )}

        <!-- Sibling Navigation -->
        <nav class="flex flex-col gap-2">
            {[
                { name: 'livros', href: '/observatorio/livros', count: '—' },
                { name: 'filmes', href: '/observatorio/filmes', count: '—' },
                { name: 'citações', href: '/observatorio/citacoes', count: quotes.length || '—' },
                { name: 'links', href: '/observatorio/links', count: '—' },
            ].map(item => {
                const isActive = currentPath === item.href;
                return (
                <a
                    href={item.href}
                    class="group flex flex-col"
                >
                    <span class:list={[
                        "text-[15px] font-medium lowercase leading-[18px] tracking-[-0.045px]",
                        isActive ? "text-black dark:text-white" : "text-neutral-500 dark:text-neutral-400 hover:text-black dark:hover:text-white"
                    ]}>{item.name}</span>
                    <span class="text-[12px] text-neutral-400 dark:text-neutral-600 group-hover:text-neutral-500 dark:group-hover:text-neutral-500 leading-tight mt-1">
                        {String(item.count).padStart(2, '0')}
                    </span>
                </a>
            )})}
        </nav>
    </div>
  </div>

  <section class="space-y-12">
    {quotes.length === 0 ? (
        <div class="py-12 text-center border-y border-neutral-100 dark:border-neutral-800">
            <p class="text-neutral-400 dark:text-neutral-500 font-serif italic">
            Nenhuma citação encontrada.
            </p>
        </div>
    ) : (
        <div class="grid grid-cols-1 gap-12">
            {quotes.map((quote: any) => (
                <blockquote class="relative pl-6 border-l-2 border-neutral-200 dark:border-neutral-800 hover:border-neutral-400 dark:hover:border-neutral-600 transition-colors group">
                    <p class="text-lg md:text-xl text-neutral-800 dark:text-neutral-300 font-serif leading-relaxed italic mb-4">
                        "{quote.text}"
                    </p>
                    <footer class="flex flex-col gap-1">
                        <cite class="text-sm font-medium text-neutral-900 dark:text-white not-italic group-hover:text-primary transition-colors">
                            {quote.author}
                        </cite>
                        {quote.source && (
                            <span class="text-xs text-neutral-500 dark:text-neutral-500">
                                {quote.source}
                            </span>
                        )}
                        {quote.tags && quote.tags.length > 0 && (
                            <div class="flex gap-2 mt-2">
                                {quote.tags.map((tag: string) => (
                                    <span class="text-[10px] text-neutral-400 dark:text-neutral-600 lowercase">#{tag}</span>
                                ))}
                            </div>
                        )}
                    </footer>
                </blockquote>
            ))}
        </div>
    )}
  </section>
</Layout>
