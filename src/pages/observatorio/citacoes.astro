---
import Layout from "../../layouts/Layout.astro";
import { getQuotes } from "../../lib/citacoes";

let quotes = [];
let allTags: Record<string, number> = {};

try {
    quotes = getQuotes();
    
    // Extract tags
    quotes.forEach((quote: any) => {
        if (quote.tags) {
            quote.tags.forEach((tag: string) => {
                allTags[tag] = (allTags[tag] || 0) + 1;
            });
        }
    });
} catch (e) {
    console.error("Failed to load quotes:", e);
}

const tags = Object.entries(allTags).sort((a, b) => b[1] - a[1]);
const currentPath = Astro.url.pathname;
---

<Layout title="Maitan Hub | Citações">
  <div slot="sidebar" class="w-full flex flex-col gap-8 md:flex-row md:items-center md:gap-6 lg:flex-col lg:items-start lg:gap-8">
    <header class="md:hidden lg:block">
      <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white mb-4 lowercase">
        citações
      </h1>
      <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
        Coleção de trechos memoráveis e pensamentos.
      </p>
    </header>

    <div class="flex flex-col gap-8 md:flex-row md:items-center md:gap-6 lg:flex-col lg:items-start lg:gap-8 w-full">
        <!-- Back Link -->
        <a href="/observatorio" class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase whitespace-nowrap">
            ← observatório
        </a>

        <!-- Filters (Tags) -->
        {tags.length > 0 && (
            <div class="flex flex-col gap-2 md:min-w-max overflow-hidden">
                <span class="text-[10px] font-medium uppercase tracking-wider text-neutral-400 dark:text-neutral-500 hidden lg:block">
                    Filtros
                </span>
                <div class="flex flex-wrap gap-2 md:flex-nowrap md:overflow-x-auto lg:flex-wrap pb-2 md:pb-0">
                    <a href="#" data-tag="all" class="filter-tag text-[13px] text-black dark:text-white font-medium transition-colors lowercase whitespace-nowrap">
                        todos
                    </a>
                    {tags.map(([tag, count]) => (
                        <a href={`#${tag}`} data-tag={tag} class="filter-tag text-[13px] text-neutral-500 hover:text-black dark:text-neutral-400 dark:hover:text-white transition-colors lowercase whitespace-nowrap">
                            #{tag} <span class="text-neutral-300 dark:text-neutral-600">({count})</span>
                        </a>
                    ))}
                </div>
            </div>
        )}
    </div>
  </div>

  <section class="space-y-12">
    {quotes.length === 0 ? (
        <div class="py-12 text-center border-y border-neutral-100 dark:border-neutral-800">
            <p class="text-neutral-400 dark:text-neutral-500 italic">
            Nenhuma citação encontrada.
            </p>
        </div>
    ) : (
        <div class="grid grid-cols-1 gap-12">
            {quotes.map((quote: any, index: number) => (
                <blockquote 
                    class="quote-item relative pl-6 border-l-2 border-neutral-200 dark:border-neutral-800 hover:border-neutral-400 dark:hover:border-neutral-600 transition-colors group"
                    data-tags={quote.tags ? quote.tags.join(',') : ''}
                >
                    <span class="absolute top-0 right-0 text-xs font-mono text-neutral-200 dark:text-neutral-800">
                        {String(index + 1).padStart(2, '0')}
                    </span>

                    <p class="text-lg md:text-xl text-neutral-800 dark:text-neutral-300 leading-relaxed italic mb-4">
                        "{quote.text}"
                    </p>
                    <footer class="flex flex-col gap-1">
                        <cite class="text-sm font-medium text-neutral-900 dark:text-white not-italic group-hover:text-primary transition-colors">
                            {quote.author}
                        </cite>
                        {quote.source && (
                            <span class="text-xs text-neutral-500 dark:text-neutral-500">
                                {quote.source}
                            </span>
                        )}
                        {quote.tags && quote.tags.length > 0 && (
                            <div class="flex gap-2 mt-2">
                                {quote.tags.map((tag: string) => (
                                    <span class="text-[10px] text-neutral-400 dark:text-neutral-600 lowercase">#{tag}</span>
                                ))}
                            </div>
                        )}
                    </footer>
                </blockquote>
            ))}
        </div>
    )}
  </section>
</Layout>

<script>
  // Filter Logic
  const filterTags = document.querySelectorAll('.filter-tag');
  const quoteItems = document.querySelectorAll('.quote-item');

  function filterQuotes(selectedTag) {
    quoteItems.forEach(item => {
      const itemTags = (item as HTMLElement).dataset.tags?.split(',') || [];
      if (selectedTag === 'all' || itemTags.includes(selectedTag)) {
        (item as HTMLElement).style.display = 'block';
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });

    // Update active state
    filterTags.forEach(tag => {
      const tagValue = (tag as HTMLElement).dataset.tag;
      if (tagValue === selectedTag) {
        tag.classList.remove('text-neutral-500', 'dark:text-neutral-400');
        tag.classList.add('text-black', 'dark:text-white', 'font-medium');
      } else {
        tag.classList.add('text-neutral-500', 'dark:text-neutral-400');
        tag.classList.remove('text-black', 'dark:text-white', 'font-medium');
      }
    });
  }

  filterTags.forEach(tag => {
    tag.addEventListener('click', (e) => {
      e.preventDefault();
      const selectedTag = (e.currentTarget as HTMLElement).dataset.tag;
      if (selectedTag) {
        filterQuotes(selectedTag);
        // Update URL hash without scrolling
        history.replaceState(null, '', selectedTag === 'all' ? ' ' : `#${selectedTag}`);
      }
    });
  });

  // Check initial hash
  const initialHash = window.location.hash.slice(1);
  if (initialHash) {
    filterQuotes(decodeURIComponent(initialHash));
  }
</script>
