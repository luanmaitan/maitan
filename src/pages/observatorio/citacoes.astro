---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Mock fetch since Citacoes page doesn't use content collection yet or uses a different method.
// Assuming it might read markdown files like Escritorio.
// If not, I will stick to the layout update primarily.
// Let's assume static content for now if no collection defined, or empty list.
// Checking file list earlier, there isn't a 'citacoes' collection explicit in `src/content/config.ts` check?
// Actually `src/lib/citacoes.ts` exists. Let's read that if needed.
// For now, implementing layout structure.

const currentPath = Astro.url.pathname;
---

<Layout title="Maitan Hub | Citações">
  <div slot="sidebar" class="flex flex-col gap-8">
    <header>
      <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white mb-4 lowercase">
        citações
      </h1>
      <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
        Coleção de trechos memoráveis e pensamentos.
      </p>
    </header>

    <nav class="flex flex-col gap-2">
        <a href="/observatorio" class="text-[15px] font-medium tracking-[-0.3px] text-neutral-500 hover:text-black dark:hover:text-white transition-colors lowercase mb-4">
            ← início
        </a>

        {[
            { name: 'livros', href: '/observatorio/livros', count: '—' },
            { name: 'filmes', href: '/observatorio/filmes', count: '—' },
            { name: 'citações', href: '/observatorio/citacoes', count: '—' }, // Dynamic count todo
            { name: 'links', href: '/observatorio/links', count: '—' },
        ].map(item => {
            const isActive = currentPath === item.href;
            return (
            <a
                href={item.href}
                class="group flex flex-col"
            >
                <span class:list={[
                    "text-[15px] font-medium lowercase leading-[18px] tracking-[-0.045px]",
                    isActive ? "text-black dark:text-white" : "text-neutral-500 dark:text-neutral-400 hover:text-black dark:hover:text-white"
                ]}>{item.name}</span>
                <span class="text-[12px] text-neutral-400 dark:text-neutral-600 group-hover:text-neutral-500 dark:group-hover:text-neutral-500 leading-tight mt-1">
                    {String(item.count).padStart(2, '0')}
                </span>
            </a>
        )})}
    </nav>
  </div>

  <section class="space-y-12">
    <div class="py-12 text-center border-y border-neutral-100 dark:border-neutral-800">
        <p class="text-neutral-400 dark:text-neutral-500 font-serif italic">
        Seção em construção...
        </p>
    </div>
  </section>
</Layout>
