---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Maitan Hub | Portfólio">
    <nav
        slot="sidebar"
        class="flex flex-col space-y-3 text-sm text-neutral-500 dark:text-neutral-400"
    >
        <a href="/portfolio" class="text-black dark:text-white font-medium"
            >trabalhos</a
        >
        <span class="cursor-not-allowed opacity-50">sobre mim</span>
        <span class="cursor-not-allowed opacity-50">contato</span>
    </nav>

    <section class="space-y-8">
        <header class="space-y-4">
            <h1
                class="text-3xl font-serif font-medium text-neutral-900 dark:text-neutral-100"
            >
                Portfólio
            </h1>
            <p
                class="text-neutral-600 dark:text-neutral-400 font-serif max-w-xl leading-relaxed"
            >
                Trabalhos selecionados de edição, design e desenvolvimento.
            </p>
        </header>

        <hr class="border-neutral-100 dark:border-neutral-800" />

        <div class="space-y-12">
            <!-- Placeholder Section: Edição -->
            <div>
                <h2
                    class="text-sm font-bold uppercase tracking-widest text-neutral-400 dark:text-neutral-500 mb-6"
                >
                    Edição de Livros
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <div
                            class="aspect-[2/3] w-full bg-neutral-100 dark:bg-neutral-800 rounded-none mb-4 overflow-hidden relative border border-neutral-200 dark:border-neutral-800"
                        >
                            <div
                                class="absolute inset-0 flex items-center justify-center text-neutral-400 dark:text-neutral-600 font-serif italic"
                            >
                                Capa do Livro
                            </div>
                        </div>
                        <h3
                            class="text-lg font-medium text-neutral-900 dark:text-neutral-100"
                        >
                            Título do Livro
                        </h3>
                        <p
                            class="text-sm text-neutral-500 dark:text-neutral-400"
                        >
                            Edição e Projeto Gráfico
                        </p>
                    </div>
                    <div class="group">
                        <div
                            class="aspect-[2/3] w-full bg-neutral-100 dark:bg-neutral-800 rounded-none mb-4 overflow-hidden relative border border-neutral-200 dark:border-neutral-800"
                        >
                            <div
                                class="absolute inset-0 flex items-center justify-center text-neutral-400 dark:text-neutral-600 font-serif italic"
                            >
                                Capa do Livro
                            </div>
                        </div>
                        <h3
                            class="text-lg font-medium text-neutral-900 dark:text-neutral-100"
                        >
                            Título do Livro
                        </h3>
                        <p
                            class="text-sm text-neutral-500 dark:text-neutral-400"
                        >
                            Edição e Projeto Gráfico
                        </p>
                    </div>
                </div>
            </div>

            <!-- Placeholder Section: Web -->
            <div>
                <h2
                    class="text-sm font-bold uppercase tracking-widest text-neutral-400 dark:text-neutral-500 mb-6"
                >
                    Web Design
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <div
                            class="aspect-video w-full bg-neutral-100 dark:bg-neutral-800 rounded-none mb-4 overflow-hidden relative border border-neutral-200 dark:border-neutral-800"
                        >
                            <div
                                class="absolute inset-0 flex items-center justify-center text-neutral-400 dark:text-neutral-600 font-serif italic"
                            >
                                Interface
                            </div>
                        </div>
                        <h3
                            class="text-lg font-medium text-neutral-900 dark:text-neutral-100"
                        >
                            Nome do Site
                        </h3>
                        <p
                            class="text-sm text-neutral-500 dark:text-neutral-400"
                        >
                            Design e Desenvolvimento
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
