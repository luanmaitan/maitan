---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Maitan Hub | Portfólio">
    <div slot="sidebar" class="flex flex-col gap-8">
        <header>
            <h1 class="text-[60px] leading-[1.1] tracking-[-0.6px] font-medium text-black dark:text-white mb-4 lowercase">
                portfólio
            </h1>
            <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed">
                Trabalhos selecionados de edição, design e desenvolvimento.
            </p>
        </header>

        <nav class="flex flex-col gap-2">
            <a href="/portfolio" class="text-[15px] font-medium tracking-[-0.3px] text-black dark:text-white mb-4 lowercase">
                trabalhos
            </a>
            <!-- Add other links or filters if needed -->
        </nav>
    </div>

    <section class="space-y-8">
        <div class="space-y-12">
            <!-- Placeholder Section: Edição -->
            <div>
                <h2
                    class="text-sm font-bold uppercase tracking-widest text-neutral-400 dark:text-neutral-500 mb-6"
                >
                    Edição de Livros
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <div
                            class="aspect-[2/3] w-full bg-neutral-100 dark:bg-neutral-800 rounded-none mb-4 overflow-hidden relative border border-neutral-200 dark:border-neutral-800"
                        >
                            <div
                                class="absolute inset-0 flex items-center justify-center text-neutral-400 dark:text-neutral-600 italic"
                            >
                                Capa do Livro
                            </div>
                        </div>
                        <h3
                            class="text-lg font-medium text-neutral-900 dark:text-neutral-100 lowercase"
                        >
                            título do livro
                        </h3>
                        <p
                            class="text-sm text-neutral-500 dark:text-neutral-400"
                        >
                            Edição e Projeto Gráfico
                        </p>
                    </div>
                    <div class="group">
                        <div
                            class="aspect-[2/3] w-full bg-neutral-100 dark:bg-neutral-800 rounded-none mb-4 overflow-hidden relative border border-neutral-200 dark:border-neutral-800"
                        >
                            <div
                                class="absolute inset-0 flex items-center justify-center text-neutral-400 dark:text-neutral-600 italic"
                            >
                                Capa do Livro
                            </div>
                        </div>
                        <h3
                            class="text-lg font-medium text-neutral-900 dark:text-neutral-100 lowercase"
                        >
                            título do livro
                        </h3>
                        <p
                            class="text-sm text-neutral-500 dark:text-neutral-400"
                        >
                            Edição e Projeto Gráfico
                        </p>
                    </div>
                </div>
            </div>

            <!-- Placeholder Section: Web -->
            <div>
                <h2
                    class="text-sm font-bold uppercase tracking-widest text-neutral-400 dark:text-neutral-500 mb-6"
                >
                    Web Design
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="group">
                        <div
                            class="aspect-video w-full bg-neutral-100 dark:bg-neutral-800 rounded-none mb-4 overflow-hidden relative border border-neutral-200 dark:border-neutral-800"
                        >
                            <div
                                class="absolute inset-0 flex items-center justify-center text-neutral-400 dark:text-neutral-600 italic"
                            >
                                Interface
                            </div>
                        </div>
                        <h3
                            class="text-lg font-medium text-neutral-900 dark:text-neutral-100 lowercase"
                        >
                            nome do site
                        </h3>
                        <p
                            class="text-sm text-neutral-500 dark:text-neutral-400"
                        >
                            Design e Desenvolvimento
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
