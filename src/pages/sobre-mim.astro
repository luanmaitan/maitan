---
import Layout from "../layouts/Layout.astro";

const timeline = [
  {
    year: "1988",
    title: "Nascimento",
    description:
      "Nasci em 1988, descendente de camponeses italianos analfabetos.",
  },
  {
    year: "1998",
    title: "Ensino Fundamental",
    description: "Formação básica integralmente realizada em escola pública.",
  },
  {
    year: "2007",
    title: "Ensino Médio",
    description: "Conclusão do ensino médio via supletivo em escola pública.",
  },
  {
    year: "2008",
    title: "Ciências Sociais",
    description: "Entrada na PUC-SP com bolsa integral pelo ProUni.",
  },
  {
    year: "2010",
    title: "Dramaturgia",
    description:
      "Ingresso na SP Escola de Teatro. Período de produção artística e pesquisa em dramaturgia contemporânea, conciliando a escrita criativa com a formação teórica.",
  },
  {
    year: "2013",
    title: "Antessala",
    description:
      "Início da pesquisa dramatúrgica no coletivo Antessala, dedicado à investigação e produção de textos teatrais.",
  },
  {
    year: "2013",
    title: "Editora Hedra",
    description:
      "Início profissional no mercado editorial. Como editor-assistente, atuei no planejamento e edição integral de livros de ficção e não ficção.",
  },
  {
    year: "2015",
    title: "Peça Casa",
    description:
      "Apresentação da peça autoral 'Casa', resultado da pesquisa no Antessala e financiada pelo ProAC.",
  },
  {
    year: "2016",
    title: "Tikinet & Ciência",
    description:
      "Coordenação editorial de publicações científicas para universidades como USP, Unicamp e Unesp. Trabalho com normas técnicas, fluxo de revisão por pares e gestão de processos editoriais.",
  },
  {
    year: "2017",
    title: "Revista Vigília",
    description:
      "Fundação e edição da Vigília, publicação digital focada em ensaios, crítica literária e produção cultural.",
  },
  {
    year: "2018",
    title: "Canal Vigília",
    description:
      "Expansão do projeto Vigília para o formato audiovisual, com vídeo-ensaios e leituras no YouTube.",
  },
  {
    year: "2019",
    title: "Letras USP & Tecnologia",
    description:
      "Ingresso no curso de Letras na Universidade de São Paulo (USP) e transição para o setor de EdTech como Líder de Avaliação, gerenciando grandes volumes de produção de conteúdo.",
  },
  {
    year: "2020",
    title: "Projeto Labirinto",
    description:
      "Criação do Labirinto, um espaço experimental para narrativas digitais e formatos híbridos de escrita.",
  },
  {
    year: "2021",
    title: "Realidade Virtual & Mista",
    description:
      "Coordenação de Garantia de Qualidade (QA) na Digital Pages. Liderança de equipes em projetos de tecnologia educacional imersiva, estruturando processos para realidade virtual e aumentada.",
  },
  {
    year: "2023",
    title: "Loja Floresta",
    description:
      "Lançamento da Floresta, uma iniciativa de curadoria e venda de livros raros e edições especiais.",
  },
  {
    year: "2024",
    title: "FTD Educação",
    description:
      "Retorno ao editorial didático como Editor de materiais de Língua Portuguesa e Artes para a educação básica.",
  },
  {
    year: "2025",
    title: "Retorno à Hedra",
    description:
      "Reentrada na Editora Hedra, agora assumindo as funções de editor e coordenador de comunicação, fechando um ciclo e iniciando novos projetos.",
  },
  {
    year: "2025",
    title: "Maitan Hub",
    description:
      "Início deste site, escrito em Astro e publicado no Vercel. Um espaço para reunir e conectar todas as frentes de trabalho e pesquisa.",
  },
];
---

<Layout title="Maitan Hub | Testemunho">
  <!-- Sidebar removed -->

  <section class="space-y-16">
    <header>
      <h1
        class="text-4xl md:text-5xl lg:text-[60px] leading-[0.95] tracking-tight font-bold text-black dark:text-white mb-4 lowercase"
      >
        sobre mim
      </h1>
    </header>

    <div class="space-y-12">
      {
        timeline.map((item) => (
          <div class="space-y-2" id={item.year}>
            <h4 class="text-sm font-bold uppercase tracking-widest text-neutral-400 dark:text-neutral-500 mb-1">
              {item.year}
            </h4>

            <div>
              <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-2 lowercase tracking-tight">
                {item.title}
              </h3>
              <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed max-w-3xl">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
