---
// src/components/mdx/FigureWide.astro
const { src, alt, caption, label = "FIG." } = Astro.props;
---

<figure class="figure-wide-component">
    <div class="img-wrapper">
        <img src={src} alt={alt} />
    </div>
    {
        caption && (
            <figcaption class="caption-side">
                <span class="fig-num">{label}</span> â€” {caption}
            </figcaption>
        )
    }
</figure>

<style>
    .figure-wide-component {
        margin: 4rem 0;
        width: 120%; /* Breakout: Mais largo que o texto */
        margin-left: -10%;
        display: flex;
        flex-direction: column;
        align-items: flex-end; /* Joga a legenda para a direita */
    }

    .img-wrapper {
        width: 100%;
        background: #000;
    }

    img {
        width: 100%;
        height: auto;
        display: block;
        filter: grayscale(100%) contrast(1.1);
        transition: filter 0.5s ease;
    }

    .figure-wide-component:hover img {
        filter: grayscale(0%);
    }

    .caption-side {
        width: 220px;
        margin-top: 12px;
        text-align: left;
        font-family: var(--f-ui);
        font-size: 0.75rem;
        color: var(--c-gray);
        border-top: 1px solid var(--c-light-gray);
        padding-top: 8px;
        line-height: 1.4;
    }

    .fig-num {
        font-weight: 700;
        color: var(--c-ink);
    }

    @media (max-width: 800px) {
        .figure-wide-component {
            width: 100%;
            margin-left: 0;
        }
        .caption-side {
            width: 100%;
        }
    }
</style>
