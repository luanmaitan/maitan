---
// src/components/mdx/SwissQuote.astro
const { author } = Astro.props;
---

<figure class="swiss-quote-component">
    <blockquote>
        <slot />
    </blockquote>
    {author && <figcaption>— {author}</figcaption>}
</figure>

<style>
    .swiss-quote-component {
        margin: 3rem 0 3rem -2rem; /* Quebra levemente à esquerda */
        padding-left: 2rem;
        border-left: 6px solid var(--c-vermilion);
    }

    blockquote {
        margin: 0;
        font-family: var(--f-display);
        font-weight: 800;
        font-size: 1.5rem;
        line-height: 1.2;
        color: var(--c-ink);
        text-transform: lowercase;
    }

    figcaption {
        margin-top: 1rem;
        font-family: var(--f-ui);
        font-size: 0.8rem;
        color: var(--c-gray);
        font-weight: 600;
    }
</style>
